{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015"]
  },
  "skipLibCheck": true,
  "exclude": ["node_modules"],
  "sourceMap": true
}
